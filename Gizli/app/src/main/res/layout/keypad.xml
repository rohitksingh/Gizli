<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <Button
            android:id="@+id/one"
            android:text="1"
            style="@style/VaultButton"
            />
        <Button
            android:id="@+id/two"
            android:text="2"
            style="@style/VaultButton"/>
        <Button
            android:id="@+id/three"
            android:text="3"
            style="@style/VaultButton"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <Button
            android:id="@+id/four"
            android:text="4"
            style="@style/VaultButton"
            />
        <Button
            android:id="@+id/five"
            android:text="5"
            style="@style/VaultButton"/>
        <Button
            android:id="@+id/six"
            android:text="6"
            style="@style/VaultButton"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <Button
            android:id="@+id/seven"
            android:text="7"
            style="@style/VaultButton"
            />
        <Button
            android:id="@+id/eight"
            android:text="8"
            style="@style/VaultButton"
            />
        <Button
            android:id="@+id/nine"
            android:text="9"
            style="@style/VaultButton"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <Button
            android:id="@+id/cancel"
            android:text="Cancel"
            style="@style/VaultButton"
            android:textSize="10dp"
            />
        <Button
            android:id="@+id/zero"
            android:text="0"
            style="@style/VaultButton"/>
        <Button
            android:id="@+id/view"
            android:layout_width="wrap_content"
            android:text="View"
            style="@style/VaultButton"
            android:textSize="10dp"
            android:visibility="invisible"
            />
    </LinearLayout>

</LinearLayout>